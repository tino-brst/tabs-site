---
import { twMerge } from 'tailwind-merge'

type Props = {
  videoIDs: Array<string>
  searchQuery: string
}

const { videoIDs: urls, searchQuery } = Astro.props

// TODO add start-at support (e.g. Sanar has a full show, and should start at a certain time where the song is played)
// Should probably switch back to using the full YouTube embed links instead of the IDs
---

{
  /**
   * The same-value negative margins and paddings are to avoid cropping the
   * cards' shadows. Thus, there is a padding to make sure there is room for
   * the shadows, then a negative margin to ignore that padding, and then
   * the wrapper div with the actual margins we want for the element.
   * That invisible border? So container and inner margins don't collapse
   */
}
<div class="mb-6 mt-4 border border-transparent">
  <div
    class="-my-5 mx-[calc(-50vw+50%)] flex gap-4 overflow-x-auto px-[calc(50vw-50%)] py-5"
  >
    {
      urls.map((id) => (
        <div
          class={twMerge(
            'relative flex aspect-video max-w-[75%] shrink-0 basis-[75%] items-center justify-center rounded-xl bg-stone-50 shadow-lg',
            "after:pointer-events-none after:absolute after:inset-0 after:rounded-xl after:ring-1 after:ring-inset after:ring-black/10 after:content-['']",
            'dark:bg-stone-900 dark:after:ring-white/10 ',
          )}
        >
          <svg
            class={twMerge(
              'absolute h-20 w-20 text-stone-200',
              'dark:text-stone-800',
            )}
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M8.00625 2.80243C8.0182 2.8104 8.03019 2.81839 8.04222 2.82642L18.591 9.8589C18.8962 10.0623 19.1792 10.251 19.3965 10.4263C19.6234 10.6092 19.8908 10.8629 20.0447 11.234C20.2481 11.7245 20.2481 12.2758 20.0447 12.7663C19.8908 13.1374 19.6234 13.391 19.3965 13.574C19.1792 13.7493 18.8962 13.9379 18.591 14.1413L8.00628 21.1978C7.63319 21.4465 7.29772 21.6702 7.01305 21.8245C6.72818 21.9789 6.33717 22.1553 5.8808 22.128C5.29705 22.0932 4.75779 21.8046 4.40498 21.3382C4.12916 20.9736 4.05905 20.5504 4.02949 20.2278C3.99994 19.9053 3.99997 19.5021 4 19.0537L4 4.98975C4 4.97529 4 4.96087 4 4.9465C3.99997 4.49811 3.99994 4.09491 4.02949 3.77249C4.05905 3.44983 4.12916 3.02663 4.40498 2.66202C4.75779 2.19565 5.29705 1.90705 5.8808 1.87219C6.33717 1.84494 6.72818 2.02135 7.01305 2.17573C7.29771 2.33 7.63317 2.55368 8.00625 2.80243Z"
              fill="currentColor"
            />
          </svg>
          <iframe
            class="invisible relative aspect-video w-full rounded-xl"
            src={`https://www.youtube.com/embed/${id}`}
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          />
        </div>
      ))
    }

    <a
      href={`https://www.youtube.com/results?search_query=${searchQuery.replace(
        ' ',
        '+',
      )}`}
      target="_blank"
      class={twMerge(
        'flex aspect-video max-w-[75%] flex-1 shrink-0 basis-[75%] cursor-pointer flex-col items-center justify-center gap-2 rounded-xl border border-stone-300 p-4 font-medium text-stone-500 shadow-[0_1px_0_theme(colors.stone.300),0_2px_2px_0_rgb(0_0_0_/_0.05)] transition-all',
        'hover:bg-stone-50',
        'active:translate-y-[1px] active:bg-stone-50 active:shadow-none',
        'dark:border-stone-600 dark:shadow-[0_1px_0_theme(colors.stone.600)] dark:bg-stone-900 dark:text-stone-300 dark:hover:bg-stone-800 dark:active:bg-stone-800',
      )}
    >
      Search on YouTube
      <span
        class={twMerge(
          'flex max-w-full items-center gap-1 rounded-full bg-stone-100 py-1 pl-2 pr-3 text-sm',
          'dark:bg-stone-700',
        )}
      >
        <svg
          class={twMerge('shrink-0 text-stone-400', 'dark:text-stone-400')}
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M21 21L15.0001 15M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
          </path>
        </svg>
        <span class="truncate">
          {searchQuery}
        </span>
      </span>
    </a>
  </div>
</div>
