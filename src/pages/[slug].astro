---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro'
import { getCollection } from 'astro:content'
import Layout from '../layouts/Layout.astro'
import { Image } from 'astro:assets'
import UsefulVideos from '../components/UsefulVideos.astro'
import { twMerge } from 'tailwind-merge'
import { formatNumberWithOrdinalSuffix } from '../utils'

export const getStaticPaths = (async () => {
  const tabs = await getCollection('tabs')

  return tabs.map((tab) => ({
    params: { slug: tab.slug },
    props: tab,
  }))
}) satisfies GetStaticPaths

type Props = InferGetStaticPropsType<typeof getStaticPaths>

const tab = Astro.props as Props
const data = tab.data
const { Content } = await tab.render()
---

<Layout
  title={`${data.title} - Tino's Tabs`}
  description={`Learn how to play ${data.title} by ${data.artist}.`}
>
  <a
    href="/"
    class={twMerge(
      '-ml-2 -mt-5 flex w-fit items-center gap-0.5 justify-self-start font-medium text-stone-500 transition-colors',
      'hover:text-stone-700',
      'dark:text-stone-300 dark:hover:text-stone-200',
    )}
  >
    <svg
      width="22"
      height="22"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M15 18L9 12L15 6"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
     All Tabs
  </a>
  <div class="mb-8 mt-6 flex flex-col items-center gap-4">
    <div
      class={twMerge(
        'relative h-44 w-44 rounded-md bg-stone-50 shadow-2xl flex items-center justify-center',
        "after:absolute after:inset-0 after:rounded-md after:ring-1 after:ring-inset after:ring-black/10 after:content-['']",
        'dark:bg-stone-900 dark:after:ring-white/10',
      )}
    >
      <svg
        class={twMerge(
          'absolute h-24 w-24 text-stone-200 -translate-x-1',
          'dark:text-stone-800',
        )}
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M19.968 4.19884C19.8297 4.20975 19.6394 4.24058 19.3014 4.29692L10.5014 5.76359C10.249 5.80564 10.1145 5.82874 10.0186 5.85226L10.0089 5.85469L10.0081 5.8647C10.0007 5.96308 10 6.09962 10 6.35542V18L10 18.0036C9.99804 20.2111 8.20793 22 6 22C3.79086 22 2 20.2091 2 18C2 15.7909 3.79086 14 6 14C6.72858 14 7.41166 14.1948 8 14.5351L8 6.327C7.99998 6.11089 7.99995 5.89705 8.0138 5.71387C8.02921 5.51013 8.06541 5.2733 8.17521 5.02853C8.32965 4.68426 8.57834 4.3907 8.89253 4.18176C9.11591 4.03322 9.34358 3.95857 9.54201 3.90988C9.72042 3.8661 9.93135 3.83097 10.1445 3.79547L19.0074 2.31832C19.2977 2.2699 19.5753 2.22361 19.8106 2.20504C20.0647 2.18499 20.3747 2.18614 20.6964 2.30563C21.1347 2.46845 21.5022 2.77973 21.7349 3.18536C21.9056 3.48306 21.9577 3.78866 21.9797 4.04255C22.0001 4.27768 22 4.55902 22 4.8533L22 16C22 16.0557 21.9955 16.1102 21.9867 16.1634C21.901 18.2968 20.1444 20 17.99 20C15.7809 20 13.99 18.2091 13.99 16C13.99 13.7909 15.7809 12 17.99 12C18.7227 12 19.4094 12.197 20 12.5409V4.88876C20 4.54605 19.9991 4.35324 19.9872 4.21511L19.9855 4.19756L19.968 4.19884Z"
          fill="currentColor"></path>
      </svg>
      {
        data.albumImageURL && (
          <Image
            src={data.albumImageURL}
            alt={`${data.album} Album Cover`}
            class="invisible relative h-44 w-44 rounded-md"
          />
        )
      }
    </div>
    <div class="flex flex-col items-center">
      <h1 class="text-2xl font-semibold">{data.title}</h1>
      <div class={twMerge('text-stone-500', 'dark:text-stone-400')}>
        {`${data.album} â€¢ ${data.artist}`}
      </div>
    </div>
    <div
      class={twMerge(
        'flex divide-x self-stretch rounded-lg bg-stone-50 p-1.5 text-sm divide-stone-200',
        'dark:bg-stone-900 dark:divide-stone-700',
      )}
    >
      <div
        class={twMerge(
          'flex-1 text-center text-stone-500',
          'dark:text-stone-400',
        )}
      >
        {/* TODO show frecuency */}
         Tuning <span
          class={twMerge('font-medium text-stone-900', 'dark:text-stone-200')}
          >{data.tuning}</span
        >
      </div>
      <div
        class={twMerge(
          'flex-1 text-center text-stone-500',
          'dark:text-stone-400',
        )}
      >
        Capo <span
          class={twMerge('font-medium text-stone-900', 'dark:text-stone-200')}
          >{
            data.capo
              ? `${formatNumberWithOrdinalSuffix(data.capo)} fret`
              : 'None'
          }</span
        >
      </div>
    </div>
    <div class="flex gap-3 self-stretch">
      <a
        data-disabled={!data.spotifyURL}
        href={data.spotifyURL}
        target="_blank"
        class={twMerge(
          'flex flex-1 items-center justify-center gap-2 rounded-full border border-stone-300 px-2 py-1 text-center font-medium text-stone-500 shadow-[0_1px_0_theme(colors.stone.300),0_2px_2px_0_rgb(0_0_0_/_0.05)] transition-all',
          'hover:bg-stone-50',
          'active:translate-y-[1px] active:bg-stone-50 active:shadow-none',
          'data-[disabled]:pointer-events-none data-[disabled]:opacity-50',
          'dark:border-stone-600 dark:shadow-[0_1px_0_theme(colors.stone.600)] dark:bg-stone-900 dark:text-stone-300 dark:hover:bg-stone-800 dark:active:bg-stone-800',
        )}
      >
        <span>
          Play on <span class="hidden sm:inline">Spotify</span>
        </span>
        <span
          class={twMerge(
            'relative rounded',
            "after:absolute after:inset-0 after:rounded after:ring-1 after:ring-inset after:ring-black/10 after:content-['']",
            'dark:after:ring-white/20',
          )}
        >
          <img
            src="data:image/webp;base64,"
            alt="Spotify"
            class="h-5 w-5 rounded"
          />
        </span>
      </a>
      <a
        data-disabled={!data.appleMusicURL}
        href={data.appleMusicURL}
        target="_blank"
        class={twMerge(
          'flex flex-1 items-center justify-center gap-2 rounded-full border border-stone-300 px-2 py-1 text-center font-medium text-stone-500 shadow-[0_1px_0_theme(colors.stone.300),0_2px_2px_0_rgb(0_0_0_/_0.05)] transition-all',
          'hover:bg-stone-50',
          'active:translate-y-[1px] active:bg-stone-50 active:shadow-none',
          'data-[disabled]:pointer-events-none data-[disabled]:opacity-50',
          'dark:border-stone-600 dark:shadow-[0_1px_0_theme(colors.stone.600)] dark:bg-stone-900 dark:text-stone-300 dark:hover:bg-stone-800 dark:active:bg-stone-800',
        )}
      >
        <span>
          Play on <span class="hidden sm:inline">Apple Music</span>
        </span>
        <span
          class={twMerge(
            'relative rounded',
            "after:absolute after:inset-0 after:rounded after:ring-1 after:ring-inset after:ring-black/10 after:content-['']",
            'dark:after:ring-white/20',
          )}
        >
          <img
            src="data:image/webp;base64,"
            alt="Apple Music"
            class="h-5 w-5 rounded"
          />
        </span>
      </a>
    </div>
  </div>

  {
    data.videoIDs && data.videoIDs.length > 0 && (
      <>
        <h2>Useful Videos</h2>
        <UsefulVideos
          videoIDs={data.videoIDs}
          searchQuery={`${data.title} ${data.artist}`}
        />
      </>
    )
  }

  <Content />
  {/* TODO feedback */}
</Layout>

<style>
  :global(h2) {
    @apply mb-4 mt-6 text-lg font-semibold;
  }

  :global(p) {
    @apply my-4;
    @apply dark:text-stone-300;
  }

  :global(pre) {
    @apply -mx-5 my-4 overflow-auto border-y border-stone-100 bg-stone-50 px-5 py-4 text-sm text-stone-600;
    @apply md:mx-0 md:rounded-lg md:border;
    @apply dark:border-stone-800 dark:bg-stone-900 dark:text-stone-300;
  }

  :global(:not(pre) > code) {
    @apply rounded border border-stone-100 bg-stone-50 px-1 text-sm text-stone-600;
    @apply dark:border-stone-700 dark:bg-stone-800 dark:text-stone-400;
  }
</style>
